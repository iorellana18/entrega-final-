<h1>Listing advertises</h1>

<table>
  <thead>
    <tr>
      <th>Date origin advertise</th>
      <th>Date end advertise</th>
      <th>Account</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertises.each do |advertise| %>
      <tr>
        <td><%= advertise.date_origin_advertise %></td>
        <td><%= advertise.date_end_advertise %></td>
        <td><%= advertise.account_id %></td>
        <td><%= advertise.event_id %></td>
        <td><%= link_to 'Show', advertise %></td>
        <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
        <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertise', new_advertise_path %>
