<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>National</th>
      <th>Headquarters</th>
      <th>Address all in</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.national %></td>
        <td><%= address.headquarters %></td>
        <td><%= address.address_all_in %></td>
        <td><%= address.organization_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
