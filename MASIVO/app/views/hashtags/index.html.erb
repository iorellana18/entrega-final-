<h1>Listing hashtags</h1>

<table>
  <thead>
    <tr>
      <th>Date publish hashtag</th>
      <th>Official</th>
      <th>Num mentions hashtag</th>
      <th>Hashtag content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hashtags.each do |hashtag| %>
      <tr>
        <td><%= hashtag.date_publish_hashtag %></td>
        <td><%= hashtag.official %></td>
        <td><%= hashtag.num_mentions_hashtag %></td>
        <td><%= hashtag.hashtag_content %></td>
        <td><%= link_to 'Show', hashtag %></td>
        <td><%= link_to 'Edit', edit_hashtag_path(hashtag) %></td>
        <td><%= link_to 'Destroy', hashtag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hashtag', new_hashtag_path %>
