<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>Emails contact</th>
      <th>Country contact</th>
      <th>Phones contact</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.emails_contact %></td>
        <td><%= contact.country_contact %></td>
        <td><%= contact.phones_contact %></td>
        <td><%= contact.organization_id %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
