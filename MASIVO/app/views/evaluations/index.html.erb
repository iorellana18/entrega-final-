<h1>Listing evaluations</h1>

<table>
  <thead>
    <tr>
      <th>Date start evaluation</th>
      <th>Date end evaluation</th>
      <th>Num mentions</th>
      <th>Num mentions positive</th>
      <th>Num mentions negative</th>
      <th>Num user active</th>
      <th>Evaluation real time</th>
      <th>Review event</th>
      <th>Data evaluation real time</th>
      <th>Evaluation account event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.date_start_evaluation %></td>
        <td><%= evaluation.date_end_evaluation %></td>
        <td><%= evaluation.num_mentions %></td>
        <td><%= evaluation.num_mentions_positive %></td>
        <td><%= evaluation.num_mentions_negative %></td>
        <td><%= evaluation.num_user_active %></td>
        <td><%= evaluation.evaluation_real_time %></td>
        <td><%= evaluation.review_event_id %></td>
        <td><%= evaluation.data_evaluation_real_time_id %></td>
        <td><%= evaluation.evaluation_account_event_id %></td>
        <td><%= link_to 'Show', evaluation %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

